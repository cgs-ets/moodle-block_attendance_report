<table class="table table-striped table-responsive text-center">
   <thead>
      <tr class="attheader">
         <th>{{#str}} classcode, block_attendance_report {{/str}}</th>
         <th>{{#str}} attendancebyclassforterm, block_attendance_report {{/str}}</th>
         <th>{{#str}} notattendancebyclassforterm, block_attendance_report {{/str}}</th>
         <th>{{#str}} totalclassforterm, block_attendance_report {{/str}}</th>
         <th>{{#str}} percentageattendedforterm, block_attendance_report {{/str}}</th>
         <th>{{#str}} arrivedlate, block_attendance_report {{/str}}</th>
         <th>{{#str}} percentagearrivedlate, block_attendance_report {{/str}}</th>
      </tr>
   </thead>
   <tbody>
      {{#classes}}
      <tr>
         <td>{{classcode}}</td>
         <td>{{attended}}</td>
         <td>{{notattended}}</td>
         <td>{{totalclasses}}</td>
         {{^lessthan}} <td class ="table-success">{{percentageattended}}</td>{{/lessthan}}
         {{#lessthan}} <td class ="table-danger">{{percentageattended}}</td>{{/lessthan}}
         {{^nooflateshow}} <td></td> {{/nooflateshow}}
         {{#nooflateshow}}<td>{{nooflateclasses}}</td>{{/nooflateshow}}
         <td>{{#islate}}{{percentagelate}}{{/islate}}</td>
         
      </tr>
      {{/classes}}
   </tbody>
</table>