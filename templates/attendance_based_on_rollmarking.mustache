<div class="table-responsive text-center">
  <h3><bold>{{studentname}}</bold></h3>
  <h5> {{#str}} attbasedonrmtitle, block_attendance_report{{/str}}</h5>
  <table class="table table-striped" >
  <thead>
    <tr>      
      <th scope="col">Attendance Date</th>
      <th scope="col">House sign in</th>
      <th colspan ="6" >Periods</th>
    </tr>
  </thead>
  <tbody>
    <tr>      
     
        <td></td>
        <td></td>
        <td>1</td>
        <td>2</td>
        <td>3</td>
        <td>4</td>
        <td>5</td>
        <td>6</td>  
    </tr>
        {{#days}}
        {{#months}}
        {{#details}}
        {{#det}}
    <tr> 
     
        <td>{{attendancedate}}</td>

        {{^late}} <td>{{housesignin}}</td> {{/late}}
        {{#nosignin}}<td class="alert-danger">{{#str}}nosignin, block_attendance_report {{/str}}</td>{{/nosignin}}
        {{#classcode}}
        {{#codes}}
            <td>{{code}}</td>
        {{/codes}}    
        {{/classcode}}          
    </tr>
        {{/det}}
        {{/details}}
        {{/months}} 
        {{/days}}
   
  </tbody>
</table>
</div>