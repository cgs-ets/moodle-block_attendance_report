<section>
    <div class="card-body">
        <h3 class="lead">{{#str}} attendancereportitle, block_attendance_report {{/str}}</h3>
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <dl>
                        <dt>{{#str}} attendancebyterm, block_attendance_report {{/str}}</dt> <br>
                        <dd>
                            <ul class="badges">
                                {{^notermdata}}
                                    {{> block_attendance_report/attendance_by_term}}
                                {{/notermdata}}
                                {{#noclassesdata}}    
                                    {{> block_attendance_report/attendance_no_data}}
                                {{/noclassesdata}}
                            </ul>
                        </dd>
                    </dl>        
                </div>
            </div>
            <br>
            <div class="row align-items-center">
            
                <div class="col-lg-12"> 
                    <dl>
               
                        <dd>
                            <ul class="badges">
                                {{^noclassesdata}}
                                    {{> block_attendance_report/attendance_by_class}}
                                {{/noclassesdata}}

                                {{#noclassesdata}}    
                                     {{> block_attendance_report/attendance_no_data}}
                                {{/noclassesdata}}
                            </ul>
                        </dd>
                    </dl>
                </div>
            </div>

            {{^hidelink}}
                <div class="col">                    
                    <a href="{{{attendancebasedonrm}}}">
                        <div class="badge-actions"></div>
                        <span class="badge-name">{{#str}} dbattbytermbyid, block_attendance_report {{/str}}</span>
                    </a>
                </div>
            {{/hidelink}}

        </div>
    </div>
</section>